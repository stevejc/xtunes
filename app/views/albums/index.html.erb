<h2>Album Index</h2>

<table class="table">

<% @albums.each do |a| %>
  <tr>
    <td><%= link_to a.name, album_path(a) %></td>
    <td>
      <%= link_to "Edit ", edit_album_path(a) %>|
      <%= link_to " Show ", album_path(a) %>|
      <%= link_to " Delete", album_path(a), :method => :delete %>
    </td>
  </tr>
<% end %>
</table>

<%= link_to "Add an Album", new_album_path, :class=> "btn" %>